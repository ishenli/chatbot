<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_bg_hover" />
                </shape>
            </item>
            <item android:top="1px" android:bottom="1px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_bg_hover" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <!-- 底部背景色 -->
                <shape android:shape="rectangle">
                    <solid android:color="@color/gray_bg_hover" />
                </shape>
            </item>
            <item android:top="1px" android:bottom="1px">
                <!-- 上层背景色，边框颜色是底部透出的颜色 -->
                <shape android:shape="rectangle">
                    <solid android:color="#fff" /> <!-- 边框颜色 -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>